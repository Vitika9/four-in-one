<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/news"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="News"

        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="18sp"
        android:onClick="news"
        android:textColor="@color/white"
        android:background="#F44336"
        />
    <TextView
        android:id="@+id/memes"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="Memes"
        android:textSize="18sp"
        android:background="#4CAF50"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:onClick="Meme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/news" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="Dice"
        android:onClick="Dice"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/dice"
        android:background="#673AB7"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memes" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="Music"
        android:onClick="Music"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#03A9F4"
        android:textSize="18sp"
        android:id="@+id/music"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Vitika Soni"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="?attr/colorOnPrimary"
        />
</androidx.constraintlayout.widget.ConstraintLayout>